# Flask
FLASK_ENV=development
FLASK_APP=run.py
SECRET_KEY=generate-a-safe-random-key
JWT_SECRET_KEY=generate-another-safe-random-key

# Database
# For Supabase, use the Transaction Pooler URL (port 6543)
DATABASE_URL=postgresql://user:password@host:6543/postgres

# SMTP (Optional - OTPs will print to console if not configured)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Supabase Storage (Required for production uploads)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-service-role-key
